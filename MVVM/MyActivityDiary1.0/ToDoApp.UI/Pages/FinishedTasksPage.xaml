<UserControl x:Class="ToDoApp.UI.Pages.FinishedTasksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:ToDoApp.UI.UIHelpers"
             mc:Ignorable="d">

    <!-- ===========  Zasoby  =========== -->
    <UserControl.Resources>
        <!-- bool -> Visibility  -->
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <!-- ===========  Layout  =========== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ukończone zadania"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="10"
                   HorizontalAlignment="Center"/>

        <!--  Lista grup  -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl ItemsSource="{Binding GroupedFinishedTasks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <!--  =====  Klikalna data  ===== -->
                            <Border Background="#FFF5F5F5"
                                    BorderBrush="#CCC"
                                    BorderThickness="1"
                                    Padding="10"
                                    Margin="0,6,0,2"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="ToggleGroupVisibility">
                                <TextBlock FontWeight="Bold"
                                           Foreground="#444"
                                           Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                            </Border>

                            <!--  =====  Zadania w grupie  ===== -->
                            <ItemsControl ItemsSource="{Binding Tasks}"
                                          Margin="6,0,0,4"
                                          Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1"
                                                BorderBrush="#DDD"
                                                Margin="0,2"
                                                Padding="8">
                                            <StackPanel>
                                                <TextBlock FontWeight="Bold"
                                                           Text="{Binding Title}"/>
                                                <TextBlock Text="{Binding Description}"/>
                                                <TextBlock Text="{Binding PriorityAsText}" 
                                                           Foreground="DarkRed" FontWeight="Bold" Margin="0,0,15,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>