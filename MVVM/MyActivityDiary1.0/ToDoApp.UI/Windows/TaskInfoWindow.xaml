<Window x:Class="ToDoApp.UI.Windows.TaskInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoApp.UI.Windows"
        mc:Ignorable="d"
        Title="TaskInfoWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <StackPanel Margin="20">
                <TextBlock x:Name="TitleTextBox"   Margin="0,10"/>
                <TextBlock x:Name="DescriptionTextBox" Margin="0,10"/>
                <TextBlock x:Name="DateTimeTextBox" Margin="0,10"/>
                <TextBlock x:Name="ProgressTextBox" Margin="0,10"/>
                <Button Content="Aktualizuj" Command="{Binding DataContext.OpenUpdateWindowCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding CurrentTaskItem, RelativeSource={RelativeSource AncestorType=Window}}"/>
                <Button Content="Zamknij" Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
